<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe3e3"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".BusquedaFragment">

    <!-- Puedes agregar otros elementos de diseño según tus necesidades -->

    <!-- MapView para mostrar el mapa de Google -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context=".BusquedaFragment" />

    <Spinner
        android:id="@+id/residenceSpinner"
        style="@style/SpinnerStyle"
        android:minHeight="48dp"
        android:theme="@style/SpinnerDropdownStyle" />


    <Button
        android:id="@+id/myLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mi_ubicaci_n"
        android:layout_margin="16dp" />

</LinearLayout>